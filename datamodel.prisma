type User {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  email: String @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  title: String!
  published: Boolean! @default(value: "false")
  author: User
  comments: [Comment!]!
}

type Comment {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  bodyText: String!
  createdBy: User
}


type Product {
  id: ID! @unique
  name: String!
  price: Float!
  color: String!
  size: String!
}






