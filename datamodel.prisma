type Query {
  product(id: ID!): Product
}

type Mutation {
  createProduct(name: String!, price: Float!, color: String!, size: String!): Product
  deleteProduct(id: ID!): Product
  publish(id: ID!): Product
  updateProduct(id: ID!): Product
}

type Product {
  id: ID! 
  published: Boolean!
  name: String!
  price: Float!
  color: String!
  size: String!
}









